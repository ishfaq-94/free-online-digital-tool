<body>
    <header>
        <h1>PDF Merger & Splitter Tool</h1>
    </header>
    <main>
        <form id="pdf-form">
            <input type="file" id="pdf-input" accept="application/pdf" multiple required>
            <select id="operation">
                <option value="merge">Merge PDFs</option>
                <option value="split">Split PDF</option>
            </select>
            <button type="submit">Process PDF</button>
        </form>
        <div id="output"></div>
        <div id="ad-space">
            <!-- Google AdSense Ad Unit -->
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-YOUR_AD_UNIT_ID"
                    crossorigin="anonymous"></script>
            <!-- Ad Unit -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-YOUR_AD_UNIT_ID"
